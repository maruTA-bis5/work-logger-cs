<Window x:Class="WorkLog.TimeLogger.TaskManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskManageWindow" Height="300" Width="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		<DataGrid Name="taskTable" />
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Click="OnOkButtonClick" Width="70">OK</Button>
			<Button Click="OnCancelButtonClick" Width="70">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
